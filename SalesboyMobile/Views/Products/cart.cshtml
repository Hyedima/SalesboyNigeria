
@{
    ViewBag.Title = "cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SalesboyMobile.Models.salesboyEntities db = new SalesboyMobile.Models.salesboyEntities();
    string email = Session["email"].ToString();
    int sn = 0;
    decimal totaAmount = 0;
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-condensed">
                    <tr>
                        <th>
                            SN
                        </th>
                        <th>
                            Product
                        </th>
                        <th>Qty</th>
                        <th>
                            Amount(N)
                        </th>
                    </tr>
                    @foreach (var item in db.Carts.Where(p => p.useremail == email).ToList())
                    {
                        sn++;
                        <tr>
                            <th>
                                @sn
                            </th>
                            <th>
                                @item.Product.productname
                            </th>
                            <th>@item.qty</th>
                            <th>
                                @{ 
                                    decimal amt = Convert.ToDecimal( item.qty * item.Product.price);
                                    totaAmount += amt;
                                }
                                @amt
                            </th>
                        </tr>
                    }
                <tr>
                    <th colspan="3">
                        Total(N)
                    </th>
                    <th>
                        @totaAmount
                    </th>
                </tr>
                </table>
            </div>
        </div>
    </div>
</div>