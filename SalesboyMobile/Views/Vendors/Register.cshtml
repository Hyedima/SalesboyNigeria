                </div>
                <p class="mt-4">Product & Services at your finger tips. <br><strong>Please wait...</strong></p>
            </div>
        </div>
    </div>
    <!-- loader section ends -->
    <!-- Begin page content -->
    <main class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-12 text-center mb-auto px-0">
                <header class="header">
                    <div class="row">
                        <div class="col-auto"></div>
                        <div class="col">
                            <div class="logo-small">
                                <img src="~/Content/web/assets/img/logo.png" alt="">
                                <h5>Salesboy Nigeria</h5>
                            </div>
                            @*<div class="col align-self-center">
                                    <h5>Sign up</h5>
                                </div>*@
                        </div>
                        @*<div class="col-auto"></div>*@
                    </div>
                    @*<div class="row">
                            <div class="col-auto">
                                <a href="#" target="_self" class="btn btn-light btn-44">
                                    <i class="bi bi-arrow-left"></i>
                                </a>
                            </div>
                            <div class="col align-self-center">
                                <h5>Sign up</h5>
                            </div>
                            <div class="col-auto">
                                <a class="btn btn-light btn-44 invisible"></a>
                            </div>
                        </div>*@
                </header>
            </div>
            <div class="col-10 col-md-6 col-lg-5 col-xl-3 mx-auto align-self-center text-center py-4">
                @if (TempData["success"] != null)
                {
                    if (TempData["success"].ToString() == "true")
                    {
                        <div class="alert alert-success" role="alert">
                            <span class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </span>
                            <strong>Success! </strong> @TempData["message"]
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <span class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </span>
                            <strong>Error! </strong> @TempData["message"]
                        </div>
                    }
                }
                <h1 class="mb-4 text-color-theme">Sign up as a vendor</h1>
                <form class="was-validated" method="post" action="">
                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" name="firstname" placeholder="First Name" id="firstname" required="">
                        <label for="firstname">First Name</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" name="lastname" placeholder="Last Name" id="lastname" required="">
                        <label for="lastname">Last Name</label>
                    </div>

                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" placeholder="+234 812 345 6789" id="phone" name="phone" required="">
                        <label for="emailphone">Phone</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" placeholder="Business Name" id="business" name="business" required="">
                        <label for="business">Business</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <select class="form-control" id="state" name="state" required="">
                            @foreach (var item in db.States.ToList())
                            {
                                <option value="@item.states">@item.states</option>
                            }
                        </select>
                        <label for="state">State</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" placeholder="Business address" id="address" name="address" required="">
                        <label for="Address">Address</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <input type="text" class="form-control" value="" placeholder="myemail@email.com" id="email" name="email" required="">
                        <label for="emailphone">Email or Phone</label>
                    </div>
                    <div class="form-floating is-valid mb-3">
                        <input type="password" class="form-control" value="" placeholder="******" id="password" name="password" required="">
                        <label for="password">Password</label>
                    </div>
                    <div class="form-floating is-invalid mb-3">
                        <input type="password" class="form-control" placeholder="*******" id="confirmpassword" required="">
                        <label for="confirmpassword">Confirm Password</label>
                        <button type="button" class="btn btn-link text-danger tooltip-btn" data-bs-toggle="tooltip"
                                data-bs-placement="left" title="Enter valid Password" id="passworderror">
                            <i class="bi bi-info-circle"></i>
                        </button>
                    </div>
                    <p class="mb-3">
                        <span class="text-muted">By clicking on Signup button, you are agree to our</span> <a href="#">Terms and Conditions</a>
                    </p>
                    <button type="submit" class="btn btn-lg btn-default w-100 mb-4 shadow">
                        Sign up
                    </button>

                </form>
            </div>
