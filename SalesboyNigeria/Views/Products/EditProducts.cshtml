<div class="row">
    <div class="col-md-12">
        <!-- vendor-registration-area -->
        <section class="vendor-registration-area pt-90 pb-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="vr-form-box">
                            <h3 class="title">Edit Product</h3>
                            <form action="#" method="post">
                                <input type="hidden" name="id" value="@Model.id" />
                                @Html.AntiForgeryToken()
                                <label>User ID</label>
                                <input type="text" name="userid" value="@Model.userid" />
                                <div class="form-grp">
                                    <label for="productname">Product Name </label>
                                    <input type="text" id="productname" name="productname" value="@Model.productname" class="form-control" />
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-grp">
                                            <label for="">Description </label>
                                            <textarea class="form-control" rows="10" id="" name="description" value="@Model.description" required=""></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-grp">
                                            <label for="">Product Type</label>
                                            <input type="text" name="producttype" class="form-control" value="@Model.producttype" />
                                        </div>
                                        <div class="form-grp">
                                            <label for="">Model</label>
                                            <input type="text" name="modelno" class="form-control" value="@Model.modelno" />
                                        </div>
                                        <div class="form-grp">
                                            <label for="">brand Name</label>
                                            <input type="text" name="brandname" class="form-control" value="@Model.brandname" />
                                        </div>
                                        <!--<div class="form-grp">
                <label for="">other Featues</label>
                <input type="text" name="otherdeatures" class="form-control">
            </div>-->
                                    </div>
                                </div>
                                <div class="form-grp select-grp">
                                    <label for="shortBy">Product Category *</label>
                                    <select id="category" name="category" class="form-control" value="@Model.category" aria-label="Select Category">
                                        <option value="Accessories & Parts">Accessories & Parts</option>
                                        <option value="Electronics">Electronics</option>
                                        <option value="Clothings">Clothings </option>
                                        <option value="Auto-mobile">Auto-mobile</option>
                                        <option value="Kitchen">Kitchen</option>
                                        <option value="Phones">Phones</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-grp">
                                            <label for="">Price </label>
                                            <input type="text" name="price" class="form-control" value="@Model.price" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-grp">
                                            <label for="">qty</label>
                                            <input type="text" name="qty" class="form-control" value="@Model.qty" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-grp">
                                            <label for="">% Discount</label>
                                            <input type="text" name="discount" class="form-control" value="@Model.discount" />
                                        </div>
                                    </div>
                                </div>
                                <!--<div class="form-grp checkbox-grp">
        <input type="checkbox" id="checkbox">
