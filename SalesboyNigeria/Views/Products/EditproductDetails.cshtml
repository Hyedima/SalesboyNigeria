@model SalesboyNigeria.Models.Product

@{
    ViewBag.Title = "EditproductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <div class="col-lg-12">
                <div class="vr-form-box">
                    <h3 class="title">Add New Product</h3>
                    <form action="#" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-grp">
                            <label for="productname">Product Name </label>
                            <input type="text" id="productname" name="productname" value="@Model.productname" class="form-control" />
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-grp">
                                    <label for="">Description </label>
                                    <textarea class="form-control" rows="10" name="description" required=""> @Model.description</textarea>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-6">
                                <div class="form-grp">
                                    <label for="">Product Type</label>
                                    <input type="text" name="producttype" value="@Model.producttype" class="form-control">
                                </div>
                                <br />
                                <div class="form-grp">
                                    <label for="">Model</label>
                                    <input type="text" name="modelno" value="@Model.modelno" class="form-control">
                                </div>
                                <br />
                                <div class="form-grp">
                                    <label for="">Brand Name</label>
                                    <input type="text" name="brandname" value="@Model.brandname" class="form-control">
                                </div>
                                <!--<div class="form-grp">
                <label for="">other Featues</label>
                <input type="text" name="otherdeatures" class="form-control">
            </div>-->
                            </div>
                        </div>
                        <br />

                        <div class="form-grp select-grp">
                            <label for="shortBy">Product Category *</label>
                            <select id="shortBy" name="productcategory" class="form-control" aria-label="Select Category">
                                <option value="@Model.category">@Model.category</option>
                                <option value="Accessories & Parts">Accessories & Parts</option>
                                <option value="Electronics">Electronics</option>
                                <option value="Clothings">Clothings </option>
                                <option value="Auto-mobile">Auto-mobile</option>
                                <option value="Kitchen">Kitchen</option>
                                <option value="Phones">Phones</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-grp">
                                    <label for="">Price </label>
                                    <input type="text" name="price" value="@Model.price" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-grp">
                                    <label for="">qty</label>
                                    <input type="text" name="qty" value="@Model.qty" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-grp">
                                    <label for="">% Discount</label>
                                    <input type="text" name="discount" value="@Model.discount" class="form-control">
                                </div>
                            </div>
                        </div>
                        <!--<div class="form-grp checkbox-grp">
        <input type="checkbox" id="checkbox">
        <label for="checkbox">Your personal data will be used to support your experience throughout this website</label>
    </div>-->
                        <br />

                        <div class="row">
                            <div class="col-md-12 text-center">
                                <button class="btn btn-warning" type="submit">Submit</button>
                                <a href="@Url.Action("Products", "Products")" class="btn btn-primary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>