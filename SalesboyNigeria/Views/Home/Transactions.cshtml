@model IEnumerable<SalesboyNigeria.Models.Sale>

@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-xl-12 col-xs-12">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    All Sales
                </div>
                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                        <table id="tech-companies-1" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>SN</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Product Name</th>
                                    <th>Qty</th>
                                    <th>Unit Price(N)</th>
                                    <th>Amount Paid(N)</th>
                                    <th>Date</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.OrderByDescending(p => p.insertdate).ToList())
                                {
                                    sn++;
                                    <tr>
                                        <td>@sn</td>
                                        <td>
                                            @item.UserAccount.firstname
                                            @item.UserAccount.lastname
                                        </td>
                                        <td>
                                            @item.UserAccount.Email
                                        </td>
                                        <td>
                                            @item.UserAccount.phone
                                        </td>
                                        <td>
                                            @item.productname
                                        </td>
                                        <td>
                                            @item.qty
                                        </td>
                                        <td>
                                            @item.unitprice
                                        </td>
                                        <td>
                                            @{
                                                var ttl = item.qty * item.unitprice;
                                            }
                                            @ttl
                                        </td>
                                        <td>
                                            @item.insertdate
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>