                </div>
                <div class="col-md-2">
                    <img src="@Model.photo" width="100%" height="150px" />
                </div>
                <div class="col-md-2">
                    <img src="@Model.photo" width="100%" height="150px" />
                </div>
                <div class="col-md-12">
                    <hr />
                    <table class="table table-bordered">
                        <tr>
                            <th>Provider</th>
                            <td>@Model.firstname @Model.lastname</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>@Model.phone</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.address</td>
                        </tr>
                        <tr>
                            <th>City</th>
