@model SalesboyNigeria.Models.Vendor

@{
    ViewBag.Title = "Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <center>
                        <h3>
                            Vendor Details
                        </h3>
                    </center>
                    <img src="@Model.photo" width="100%" height="350px" />
                    <hr />
                </div>
                <div class="col-md-2">
                    <img src="@Model.photo" width="100%" height="150px" />

                </div>
                <div class="col-md-2">
                    <img src="@Model.photo" width="100%" height="150px" />

                </div>
                <div class="col-md-2">
                    <img src="@Model.photo" width="100%" height="150px" />

                </div>
