            </div>*@
        @foreach (var item in db.Products.ToList())
        {
            <div class="col-md-12 col-xs-3 col-sm-3 col-6 col-lg-2 col-xl-2">
                <hr />
                <!-- Simple card -->
                <div class="card">
                    @*<a href="@Url.Action("productDetails", "Products", new {id = item.id})">
