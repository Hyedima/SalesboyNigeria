                    </a>
                    <div class="card-body">
                        <center>
                            <a class="card-title" href="@Url.Action("productDetails", "Products", new {id = item.id})">
                                <strong>@item.productname</strong>
                                <div class="ms-3 me-4">
                                    <strong class="text-danger display-9 fw-bold mb-5">&#8358;@string.Format("{0:#,##}", Convert.ToDecimal(item.price)) </strong>
                                </div>
                            </a>
                            <br />
                            <a href="#" class="btn btn-warning btn-rounded" onclick="Addcart('@item.id', '@item.productname', '@Session["email"]','', '@item.price', '1')" title="">Add cart</a>
                        </center>
                    </div>
                </div>
            </div>
        }
    </div>
