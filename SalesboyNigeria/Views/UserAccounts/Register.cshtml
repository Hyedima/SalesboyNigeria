
@{
    ViewBag.Title = "Register";
    SalesboyNigeria.Models.salesboyEntities db = new SalesboyNigeria.Models.salesboyEntities();
     Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | Salesboys</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Qovex" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/Qovex/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/Content/Qovex/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Content/Qovex/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Content/Qovex/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>
<body>
    @*<div class="home-btn d-none d-sm-block">
            <a href="index.html" class="text-dark"><i class="fas fa-home h2"></i></a>
        </div>*@
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-login text-center">
                            <div class="bg-login-overlay"></div>
                            <div class="position-relative">
                                <h5 class="text-white font-size-20">Welcome To Salesboy Nigeria!!!!</h5>
                                <p class="text-white-50 mb-0">Sign up as a customer.</p>
                                <a href="@Url.Action("Register", "useraccounts")" class="logo logo-admin mt-4">
                                    <img src="~/Content/Qovex/assets/images/logo-sm-dark.png" alt="" height="70">
                                </a>
                            </div>
                        </div>
                        <div class="card-body pt-5">
                            <div class="p-2">
                                <form class="form-horizontal" action="@Url.Action("Register","Useraccounts")" method="post">
                                    @Html.AntiForgeryToken()
                                    <strong class="text-danger">
                                        @TempData["message"]
                                    </strong>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <input type="email" name="email" id="" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="">Password</label>
                                            <input type="password" name="password" id="" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                            <input type="password" name="cpassword" id="" class="form-control" />
                                        </div>
                                    </div>


                                    <div class="ps-checkbox">
                                        <input class="form-control" type="checkbox" id="save-next-time" placeholder="" name="accept">
                                        <label for="save-next-time">I agree all statements in <a href="#!">Terms of service</a></label>
                                    </div>

                                    <div class="mt-3">
                                        <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">
                                            Register
                                        </button>
                                    </div>

                                    <div class="mt-4 text-center">
                                        Already have an account ?  <a href="@Url.Action("login","Useraccounts")" class="text-muted">
                                            <i class="mdi mdi-lock me-1"></i> Login Here
                                        </a>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center"> 
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Qovex. Crafted with <i class="mdi mdi-heart text-danger"></i> by CodeIcon Technology
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <!-- JAVASCRIPT -->
    <script src="~/Content/Qovex/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/jquery-sparkline/jquery.sparkline.min.js"></script>

    <script src="~/Content/Qovex/assets/js/app.js"></script>
</body>
</html> 