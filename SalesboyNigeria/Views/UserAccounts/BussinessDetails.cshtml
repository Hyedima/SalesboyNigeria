@model SalesboyNigeria.Models.UserAccount

@{
    ViewBag.Title = "BussinessDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SalesboyNigeria.Models.salesboyEntities db = new SalesboyNigeria.Models.salesboyEntities();
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form class="mx-1 mx-md-4" method="post" action="@Url.Action("BussinessDetails","UserAccounts")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example3c">State of Residence</label>
                            <select class="form-control" name="state" required="">
                                <option value="@Model.state">@Model.state</option>
                                @foreach (var item in db.States.OrderBy(p => p.states).ToList())
                                {
                                    <option value="@item.states">@item.states</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">LGA/City</label>
                            <input type="text" name="city" id="" value="@Model.city" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Business Name</label>
                            <input type="text" name="businessname" value="@Model.brandname" id="" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Category(Art, Grocery, Electronics, Clothings, Makeup, Mechanics, Fashion Design etc )</label>
                            <input type="text" name="category" value="@Model.brandname" id="" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Describe The Business</label>
                            <textarea class="form-control" id="summernote" name="description">
                                @Model.about
                            </textarea>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Business Address</label>
                            <textarea class="form-control" name="address">
                                @Model.address
                            </textarea>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group submtit">
                        <button type="submit" class="ps-btn ps-btn--fullwidth">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>