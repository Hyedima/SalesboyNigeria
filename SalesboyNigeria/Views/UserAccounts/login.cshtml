
@{
    ViewBag.Title = "login";
    SalesboyNigeria.Models.salesboyEntities db = new SalesboyNigeria.Models.salesboyEntities();
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | Salesboys</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Salesboy SalesboyNigeria SalesboyAfrica Ecommerce" name="description" />
    <meta content="Codeicon" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/Qovex/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/Content/Qovex/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Content/Qovex/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Content/Qovex/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>
<body>
    @*<div class="home-btn d-none d-sm-block">
            <a href="index.html" class="text-dark"><i class="fas fa-home h2"></i></a>
        </div>*@
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-login text-center">
                            <div class="bg-login-overlay"></div>
                            <div class="position-relative">
                                <h5 class="text-white font-size-20">Welcome Back !</h5>
                                <p class="text-white-50 mb-0">Login to buy goods and services.</p>
                                <a href="@Url.Action("login", "useraccounts")" class="logo logo-admin mt-4">
                                    <img src="~/Content/Qovex/assets/images/logo-sm-dark.png" alt="" height="70">
                                </a>
                            </div>
                        </div>
                        <div class="card-body pt-5">
                            <div class="p-2">
                                <form class="form-horizontal" action="@Url.Action("Login","Useraccounts")" method="post">
                                    <strong class="text-danger text-center">
                                        @TempData["message"]
                                    </strong>
                                    <div class="mb-3">
                                        <label class="form-label" for="username">Username</label>
                                        <input class="form-control" type="email" required="" name="email" placeholder="Username or email address">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="userpassword">Password</label>
                                        <input class="form-control" type="password" name="password" placeholder="Password">
                                    </div>

                                    @*<div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="customControlInline">
                                        <label class="form-check-label" for="customControlInline">
                                            Remember
                                            me
                                        </label>
                                    </div>*@

                                    <div class="mt-3">
                                        <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">
                                            Log In
                                        </button>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <a href="@Url.Action("ResetPassword","Useraccounts")" class="text-muted">
                                            <i class="mdi mdi-lock me-1"></i> Forgot your password?
                                        </a>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <p>
                            Don't have an account ? <a href="@Url.Action("Register", "UserAccounts")" class="fw-medium text-primary"> Signup now </a>
                        </p>
                        <p>
                            OR
                        </p>
                        <p>
                            Register to <a href="@Url.Action("RegisterVendor", "UserAccounts")" class="fw-medium text-primary"> Become a Vendor </a>
                        </p>
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Salesboy Nigeria. Developed with <i class="mdi mdi-heart text-danger"></i> by CodeIcon Technology
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <!-- JAVASCRIPT -->
    <script src="~/Content/Qovex/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Content/Qovex/assets/libs/jquery-sparkline/jquery.sparkline.min.js"></script>

    <script src="~/Content/Qovex/assets/js/app.js"></script>
</body>
</html> 